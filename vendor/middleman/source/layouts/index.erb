<% wrap_layout :layout do %>
<div class="wrapper">
      <!-- https://www.pexels.com/photo/abstract-art-circle-clockwork-414579/ -->
      <div class="landing-header" style="background-image: url('<%= ENV['CDN_URL'] %>/images/mds/landing.jpg');">
        <div class="container-fluid">
          <div class="motto">
            <h1><%= current_page.data.title %></h1>
            <p><%= current_page.data.description %></p>
          </div>
        </div>
      </div>

      <div class="section section-white">
        <div class="row row-section">
          <div class="container-fluid">
            <div class="col-sm-8 col-sm-offset-2 content markdown" id="content">
              <%= yield -%>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
